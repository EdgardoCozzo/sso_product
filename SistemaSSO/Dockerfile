# IMAGEN MODELO
FROM openjdk:17-jdk-slim
ARG JAR_FILE=taget/SistemaSSO-0.0.1-SNAPSHOT.jar
# INFORMAR EL PUERTO DONDE SE EJECUTA EL CONTENEDOR (INFORMATIVO)
EXPOSE 8080

# COPIAR Y PEGAR ARCHIVOS DENTRO DEL CONTENEDOR

COPY target/SistemaSSO-0.0.1-SNAPSHOT.jar SistemaSSO-0.0.1-SNAPSHOT.jar



# LEVANTAR NUESTRA APLICACION CUANDO EL CONTENEDOR INICIE
ENTRYPOINT ["java","-jar","SistemaSSO-0.0.1-SNAPSHOT.jar"]
